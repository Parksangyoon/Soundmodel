<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@android:color/holo_orange_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_5x">
        <TextView
            android:id="@+id/bitsound.label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_5x"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/unit_1x"
            android:layout_marginLeft="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.repeat_init.count"
            android:layout_toLeftOf="@+id/bitsound.repeat_init.count"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"
            android:text="@string/bitsound.label"/>
        <TextView
            android:id="@+id/bitsound.repeat_init.count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:layout_toStartOf="@+id/bitsound.repeat_init"
            android:layout_toLeftOf="@+id/bitsound.repeat_init"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/bitsound.repeat_init"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.mic_permission"
            android:clickable="true"
            android:focusable="true"/>
        <ImageView
            android:id="@+id/bitsound.mic_permission"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.check_and_init"
            android:layout_toLeftOf="@+id/bitsound.check_and_init"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.mic_permission"/>
        <ImageView
            android:id="@+id/bitsound.check_and_init"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.init"
            android:layout_toLeftOf="@+id/bitsound.init"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.check_and_init" />
        <ImageView
            android:id="@+id/bitsound.init"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.release"
            android:layout_toLeftOf="@+id/bitsound.release"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.init" />
        <ImageView
            android:id="@+id/bitsound.release"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.release" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_5x">
        <TextView
            android:id="@+id/bitsound.receiver.label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_5x"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/unit_1x"
            android:layout_marginLeft="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.receiver.repeat.count"
            android:layout_toLeftOf="@+id/bitsound.receiver.repeat.count"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"
            android:text="@string/bitsound.receiver.label"/>
        <TextView
            android:id="@+id/bitsound.receiver.repeat.count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:layout_toStartOf="@+id/bitsound.receiver.repeat"
            android:layout_toLeftOf="@+id/bitsound.receiver.repeat"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/bitsound.receiver.repeat"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.receiver.start"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.receiver.repeat" />
        <ImageView
            android:id="@+id/bitsound.receiver.start"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.receiver.stop"
            android:layout_toLeftOf="@+id/bitsound.receiver.stop"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.receiver.start"/>
        <ImageView
            android:id="@+id/bitsound.receiver.stop"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.receiver.stop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_5x">
        <TextView
            android:id="@+id/bitsound.shaking.label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_5x"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/unit_1x"
            android:layout_marginLeft="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.shaking.repeat.count"
            android:layout_toLeftOf="@+id/bitsound.shaking.repeat.count"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"
            android:text="@string/bitsound.shaking.label"/>
        <TextView
            android:id="@+id/bitsound.shaking.repeat.count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:layout_toStartOf="@+id/bitsound.shaking.repeat"
            android:layout_toLeftOf="@+id/bitsound.shaking.repeat"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/bitsound.shaking.repeat"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.shaking.enable"
            android:layout_toLeftOf="@+id/bitsound.shaking.enable"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.shaking.repeat"/>
        <ImageView
            android:id="@+id/bitsound.shaking.enable"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.shaking.disable"
            android:layout_toLeftOf="@+id/bitsound.shaking.disable"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.shaking.enable"/>
        <ImageView
            android:id="@+id/bitsound.shaking.disable"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.shaking.disable"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_5x">
        <TextView
            android:id="@+id/bitsound.smarton.label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_5x"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/unit_1x"
            android:layout_marginLeft="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.smarton.repeat"
            android:layout_toLeftOf="@+id/bitsound.smarton.repeat"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"
            android:text="@string/bitsound.smarton.label"/>
        <ImageView
            android:id="@+id/bitsound.smarton.repeat"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.smarton.start.10sec_later"
            android:layout_toLeftOf="@+id/bitsound.smarton.start.10sec_later"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.smarton.repeat"/>
        <ImageView
            android:id="@+id/bitsound.smarton.start.10sec_later"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.smarton.start"
            android:layout_toLeftOf="@+id/bitsound.smarton.start"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.smarton.start.10sec_later"
             />
        <ImageView
            android:id="@+id/bitsound.smarton.start"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/bitsound.smarton.stop"
            android:layout_toLeftOf="@+id/bitsound.smarton.stop"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.smarton.start"/>
        <ImageView
            android:id="@+id/bitsound.smarton.stop"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/bitsound.smarton.stop" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/misc.get_scheduled_contents.repeat.count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:layout_toStartOf="@+id/misc.get_scheduled_contents.repeat"
            android:layout_toLeftOf="@+id/misc.get_scheduled_contents.repeat"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/misc.get_scheduled_contents.repeat"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/misc.get_scheduled_contents"
            android:layout_toLeftOf="@+id/misc.get_scheduled_contents"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/misc.get_scheduled_contents.repeat"
             />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/misc.get_scheduled_contents"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:text="@string/misc.get_scheduled_contents"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/misc.send_custom_log.repeat.count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:layout_toStartOf="@+id/misc.send_custom_log.repeat"
            android:layout_toLeftOf="@+id/misc.send_custom_log.repeat"
            android:paddingBottom="@dimen/unit_0.75x"
            android:gravity="bottom"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/misc.send_custom_log.repeat"
            android:layout_width="@dimen/unit_5x"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_toStartOf="@+id/misc.send_custom_log"
            android:layout_toLeftOf="@+id/misc.send_custom_log"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/misc.send_custom_log.repeat" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/misc.send_custom_log"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_5x"
            android:padding="@dimen/unit_1x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:text="@string/misc.send_custom_log"/>
    </RelativeLayout>
</LinearLayout>

